{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "deprecated/**",
      "initial-db.d/**"
    ]
  },
  "functions": {
    "source": "./"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}
